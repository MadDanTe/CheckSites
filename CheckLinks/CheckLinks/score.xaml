<Window x:Class="CheckLinks.Score"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckLinks"
        mc:Ignorable="d"
        Title="Ссылок найдено" Height="150" Width="250">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,23,0,0" TextWrapping="Wrap" Text="Найдено ссылок:" VerticalAlignment="Top" Width="94" Height="17"/>
        <TextBlock x:Name="scoreLinks" HorizontalAlignment="Left" Margin="118,23,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="55,45,0,0" TextWrapping="Wrap" Text="Выполнить проверку?" VerticalAlignment="Top" Width="123"/>
        <Button x:Name="cancel" Content="Нет" HorizontalAlignment="Left" Margin="29,72,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="bconfirmLinks" Content="Да" HorizontalAlignment="Left" Margin="144,72,0,0" VerticalAlignment="Top" Width="75" Click="confirmLinks"/>
        

    </Grid>
</Window>
